<h1>tasks</h1>
<%= link_to 'add new task', new_task_path %>

<ul style="list-style-type: none; padding: 0;">
  <% @tasks.each do |task| %>
    <li>
      <% if task.completed %>
        ✅
      <% else %>
        ⬜
      <% end %>
      <%= link_to task.title, task_path(task) %>
    </li>
  <% end %>
</ul>
